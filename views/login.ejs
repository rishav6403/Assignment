<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="./assets/stylesheets/main.css">
    <title>Assignment</title>
</head>

<body>

    <div class="container-fluid " id="mainContainer">
        <div class="d-flex  align-items-center">
            <img style="width: 620px;" src="./assets/images/Sign In.png" alt="image" class="img-fluid" />
        </div>

        <div class="d-flex flex-column p-4 border rounded-3" id="signUpBox">
            <h2 class="fw-bold" id="heading">
                Let us know <span id="spans">!</span>
            </h2>

            <form action="/user/login" method="post" class="d-flex flex-column mt-2">
                <input type="email" placeholder="Email" class="p-2 border-0 border-bottom mt-2" name="email" required />
                <div class="border-bottom position-relative " id="icons">
                    <input type="password" id="password" placeholder="Password" class="p-2 border-0  mt-2 w-100"
                        name="password" required />
                    <i id="togglePassword" class="fa-solid fa-eye"></i>
                </div>
                <button class="rounded-pill border-0 py-2 text-white fw-bold" id="signUpButton">
                    Sign In
                </button>
                <div class="w-100 rounded-pill py-2 mt-2 d-flex justify-content-center" id="signupBtn">
                    <a href="/signup" id="signUpTag" class="fw-bold"> Sign Up </a>
                </div>
            </form>
        </div>
    </div>

    <script>
        const togglePassword = document.querySelector("#togglePassword");
        const password = document.querySelector("#password");

        togglePassword.addEventListener("click", function () {
            const type = password.getAttribute("type") === "password" ? "text" : "password";
            password.setAttribute("type", type);
            this.classList.toggle("fa-eye-slash");
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>